@model List<Gym.Models.Entities.Day>

<h1>Workouts</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nr</th>
            <th>Type</th>
            <th>Exercises</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var day in Model)
        {
            <tr>
                <td>@day.Nr</td>
                <td>@day.Type</td>
                <td>
                    <ul>
                        @foreach (var exercise in day.Exercises)
                        {
                            <li>
                                <strong>@exercise.Name:</strong>
                                @exercise.Set x @exercise.Rep, @exercise.Kg kg
                                (@exercise.Description)
                            </li>
                        }
                    </ul>
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Days" asp-action="Edit" asp-route-id="@day.Id">Edit</a>

                    <form asp-controller="Days" asp-action="Delete" asp-route-id="@day.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this workout?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
