@{
}

@model List<Gym.Models.Entities.Day>

<h1>Workout</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nr</th>
            <th>Type</th>
            <th>Excercise</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var day in Model)
        {
            <tr>
                <td>@day.Nr</td>
                <td>@day.Type</td>
                <td>@day.Exercise</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Days" asp-action="Edit" asp-route-id="@day.Id">Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>
