@{
}

@model Gym.Models.Entities.Day

<div class="text-center">
    <h1 class="display-4">Edit workout</h1>
</div>

@if (Model is null)
{
    <p>No workout was found with this Id</p>
}
else
{
<form asp-action="Edit" asp-controller="Days" method="post">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" asp-for="Id" />

    <label>Nr</label>
    <input class="form-control" type="number" asp-for="Nr" />

    <label class="mt-4"> Type</label>
    <input class="form-control" type="text" asp-for="Type" />

    <label class="mt-4"> Exercise</label>
    <input class="form-control" type="text" asp-for="Exercise" />

    <label class="mt-4"> Set</label>
    <input class="form-control" type="number" asp-for="Set" />

    <label class="mt-4"> Rep</label>
    <input class="form-control" type="number"  asp-for="Rep" />

    <label class="mt-4"> Kg</label>
    <input class="form-control" type="number" asp-for="Kg" />

    <label class="mt-4"> Decription</label>
    <input class="form-control" type="text" asp-for="Description" />

    <button class="btn btn-primary" mt-4 type="submit">Save</button>

    <button class="btn btn-danger" mt-4 type="submit"
    asp-action="Delete" asp-controller="Days">Delete</button>
</form>
}
