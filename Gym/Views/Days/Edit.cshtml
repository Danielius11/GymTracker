@model Gym.Models.AddDayWithExercisesViewModel

<div class="text-center">
    <h1 class="display-4">Edit Workout</h1>
</div>

<form asp-action="Edit" asp-controller="Days" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <label>Nr</label>
    <input class="form-control" type="number" asp-for="Nr" />

    <label class="mt-3">Type</label>
    <input class="form-control" type="text" asp-for="Type" />

    <hr />

    @for (int i = 0; i < Model.Exercises.Count; i++)
    {
        <div class="card p-3 mb-3">
            <h5>Exercise @(i + 1)</h5>

            <label>Name</label>
            <input class="form-control" asp-for="Exercises[@i].Name" />

            <label class="mt-2">Set</label>
            <input class="form-control" asp-for="Exercises[@i].Set" />

            <label class="mt-2">Rep</label>
            <input class="form-control" asp-for="Exercises[@i].Rep" />

            <label class="mt-2">Kg</label>
            <input class="form-control" asp-for="Exercises[@i].Kg" />

            <label class="mt-2">Description</label>
            <input class="form-control" asp-for="Exercises[@i].Description" />
        </div>
    }

    <button class="btn btn-primary" type="submit">Save</button>
</form>
