@{
    ViewData["Title"] = "Create";
}

@model Gym.Models.Day

<div class="text-center">
    <h1 class="display-4">Create new workout</h1>
</div>


<form asp-action="CreateWorkoutsForm" asp-controller="Home">
    <label>Nr</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Nr" />

    <label class="mt-4"> Type</label>
    <input class="form-control" type="text" placeholder="Add a type of a day" asp-for="Type" />

    <label class="mt-4"> Exercise</label>
    <input class="form-control" type="text" placeholder="Add a exercise" asp-for="Exercise" />

    <label class="mt-4"> Set</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Set" />

    <label class="mt-4"> Rep</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Rep" />

    <label class="mt-4"> Kg</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Kg" />

    <label class="mt-4"> decription</label>
    <input class="form-control" type="text" placeholder="Add a description" asp-for="Description" />

    <button class="btn btn-primary" mt-4 type="submit">Ok</button>
</form>